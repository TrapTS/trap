{
  "name": "trap",
  "version": "1.0.0",
  "description": "Trap is base on koa, running in node.js v8 runtime.",
  "scripts": {
    "dev": "NODE_ENV=development ts-node ./src/server.ts",
    "format": "prettier --write \"**/*.ts\""
  },
  "tslintConfig": {
    "extends": [
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "prettier": {
    "singleQuote": true,
    "semi": false
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TrapTS/trap.git"
  },
  "keywords": [
    "ts",
    "trap",
    "koa"
  ],
  "author": "AlfieriChou",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/TrapTS/trap/issues"
  },
  "homepage": "https://github.com/TrapTS/trap#readme",
  "devDependencies": {
    "@types/node": "^10.12.18",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "ts-node": "^7.0.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-plugin-prettier": "^2.0.1"
  },
  "dependencies": {
    "class-transformer": "^0.2.0",
    "dir_filenames": "^1.0.6",
    "knex": "^0.16.3",
    "koa": "^2.6.2",
    "koa-bodyparser": "^4.2.1",
    "koa-logger": "^3.2.0",
    "koa-router": "^7.4.0",
    "lodash": "^4.17.11",
    "reflect-metadata": "^0.1.12",
    "typescript": "^3.2.2"
  }
}
